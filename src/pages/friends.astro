        {
          friends.map((friend) => (
            <div class="flex items-center shadow-md p-4">
              <img src={friend.avatar} alt={friend.name} class="size-16" />
              <div class="ml-4">
                <a class=" underline" href={friend.url} target="_blank">
                  {friend.name}
                </a>
                <p>{friend.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </main>
    <Footer />
  </body>
</html>
